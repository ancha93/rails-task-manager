<h1>Modifier la tâche</h1>

<%= form_with(model: @task, url: task_path(@task), method: :patch, local: true) do |form| %>
  <div>
    <%= form.label :title, 'Titre' %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :details, 'Détails' %>
    <%= form.text_area :details %>
  </div>

  <div>
    <%= form.label :completed, 'Terminé' %>
    <%= form.check_box :completed %>
  </div>

  <div>
    <%= form.submit 'Mettre à jour la tâche' %>
  </div>
<% end %>

<%= link_to 'Retour à la liste des tâches', tasks_path %>
