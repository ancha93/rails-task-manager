<h1>New Task</h1>

<%= form_with(model: @task, url: tasks_path, local: true) do |form| %>
  <div>
    <%= form.label :title, 'Titre' %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :details, 'Détails' %>
    <%= form.text_area :details %>
  </div>

  <div>
    <%= form.label :completed, 'Terminé' %>
    <%= form.check_box :completed %>
  </div>

  <div>
    <%= form.submit 'Créer la tâche' %>
  </div>
<% end %>

<%= link_to 'Retour à la liste des tâches', tasks_path %>
